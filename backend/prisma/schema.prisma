generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user model
model User {
  id            Int       @id @default(autoincrement())
  gitId         Int
  username      String    @unique
  name          String
  htmlUrl       String
  apiUrl        String
  bio           String?
  avatarUrl     String
  etag          String
  repos         Repo[]
}

// repo model
model Repo {
  id            Int       @id @default(autoincrement())
  name          String
  desc          String?
  htmlUrl       String
  stars         Int
  languages     String[]
  topics        String[]
  etag          String
  ownerId       Int
  owner         User      @relation(fields: [ownerId], references: [id])
}